<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotatingTable.Xamarin.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Режимы" FontAttributes="Bold" Margin="8, 0, 0, 0"/>
                <Button Text="Авто" CornerRadius="8" Margin="8, 0, 8, 0"/>
                <Button Text="Ручной" CornerRadius="8" Margin="8, 0, 8, 0"/>
                <Button Text="Безостановочный" CornerRadius="8" Margin="8, 0, 8, 0"/>
                <Button Text="Видео" CornerRadius="8" Margin="8, 0, 8, 0"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" Margin="8">
                <Label Text="Установки" FontAttributes="Bold"/>
                <Label Text="Количество шагов"/>
                <Slider/>
                <Label Text="Ускорение"/>
                <Slider/>
                <Label Text="Экспозиция"/>
                <Slider/>
                <Label Text="Задержка"/>
                <Slider/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>