<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RotatingTable.Xamarin.ViewModels"
             x:DataType="viewmodels:MainModel"
             x:Class="RotatingTable.Xamarin.Views.MainPage">
    <ContentPage.BindingContext>
        <viewmodels:MainModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="12">
                <Label Text="Настройки" FontAttributes="Bold"/>
                <StackLayout Margin="8">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Количество шагов"/>
                        <Label Text="{Binding StepsText}" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"
                            Maximum="21" Minimum="0" Value="{Binding Steps}"
                            DragCompletedCommand="{Binding ChangeStepsCommand}"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Ускорение"/>
                        <Label Text="{Binding AccelerationText}" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"
                            Maximum="10" Minimum="1" Value="{Binding Acceleration}"
                            DragCompletedCommand="{Binding ChangeAccelerationCommand}"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Экспозиция"/>
                        <Label Text="{Binding ExposureText}" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"
                            Maximum="5" Minimum="1" Value="{Binding Exposure}"
                            DragCompletedCommand="{Binding ChangeExposureCommand}"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Задержка"/>
                        <Label Text="{Binding DelayText}" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"
                            Maximum="50" Minimum="0" Value="{Binding Delay}"
                            DragCompletedCommand="{Binding ChangeDelayCommand}"/>
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" Margin="12">
                <Label Text="Режимы" FontAttributes="Bold"/>
                <Button Text="Авто" CornerRadius="8" Command="{Binding RunAutoCommand}"/>
                <Button Text="Ручной" CornerRadius="8"/>
                <Button Text="Безостановочный" CornerRadius="8"/>
                <Button Text="Видео" CornerRadius="8"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>