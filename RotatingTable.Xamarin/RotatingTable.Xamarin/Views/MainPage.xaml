<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotatingTable.Xamarin.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="12">
                <Label Text="Настройки" FontAttributes="Bold"/>
                <StackLayout Margin="8">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Количество шагов"/>
                        <Label Text="18" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Ускорение"/>
                        <Label Text="10" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Экспозиция"/>
                        <Label Text="100" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Задержка"/>
                        <Label Text="2500" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <Slider MinimumTrackColor="Gray" MaximumTrackColor="Gray" ThumbColor="Blue"/>
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" Margin="12">
                <Label Text="Режимы" FontAttributes="Bold"/>
                <Button Text="Авто" CornerRadius="8"/>
                <Button Text="Ручной" CornerRadius="8"/>
                <Button Text="Безостановочный" CornerRadius="8"/>
                <Button Text="Видео" CornerRadius="8"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>